@using SampleSite.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<TestSiteUser> SignInManager
@inject UserManager<TestSiteUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" href="/Manage/Index" title="Manage">@User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form method="post" class="form-inline" action="/Account/Logout">
            @Html.AntiForgeryToken()
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark"  href="/Account/Login">Login</a>
    </li>
}
</ul>